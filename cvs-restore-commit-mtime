#!/bin/sh
# $Id$

timestamps()
{
    cvs -z3 -q log -N -r "$@" |
        sed -n \
            -e '/^Working file: \(.*\)/{s//\1/;h;}' \
            -e '/date: \([0-9-]* [0-9:]*\)[^;]*;.*/{s//\1/;G;s/\n/	/p;}'
}


main()
{
    timestamps "$@" |
        while read date time file; do
            if [ -f "$file" ]; then
                echo "$date $time $file"
                touch -d "$date $time UTC" "$file"
            fi
        done
}

main "$@"

# eof
